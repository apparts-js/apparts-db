{
  "name": "@apparts/db",
  "version": "2.3.0",
  "description": "Database drivers for multiple databases",
  "main": "index.js",
  "scripts": {
    "prepublishOnly": "npm run clean && npm ci  && npm run ci",
    "testOne": "jest",
    "test": "jest --watch --detectOpenHandles",
    "testCoverage": "jest --coverage",
    "clean": "rimraf coverage build tmp",
    "ci": "npm ci && npm run ci:prettier && npm run ci:eslint && npm run ci:test",
    "ci:prettier": "CI=true prettier --check .",
    "ci:test": "CI=true jest test",
    "ci:eslint": "eslint . -c .eslintrc.js"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:phuhl/apparts-db.git"
  },
  "keywords": [
    "db",
    "database"
  ],
  "author": "Philipp Uhl",
  "license": "MIT",
  "dependencies": {
    "jest-circus": "^27.3.1",
    "pg": "^8.0.0"
  },
  "devDependencies": {
    "@apparts/config": "^1.0.6",
    "jest": "^27.3.1",
    "prettier": "^2.5.1",
    "supertest": "^6.1.3"
  }
}
